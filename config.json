{   
    "logging": {
        "logs": {
            "debug": {
                "writer": {
                    "output": "stdout"
                },
                "level": "DEBUG"
            }
        }
    },
    "apps": {
      "http": {
        "http_port": 9080,
        "https_port": 9443,
        "servers": {
          "mud": {
            "listen": [
              "127.0.0.1:9443"
            ],
            "routes": [
              {
                "group": "mud",
                "match": [
                  {
                    "path": [
                      "/*"
                    ]
                  }
                ],
                "handle": [
                  {
                    "handler": "mud_file_server",
                    "validate_headers": false
                  }
                ]
              }
            ],
            "logs": {}
          }
        }
      },
      "tls": {
        "automation": {
          "policies": [
            {
              "subjects": ["localhost"],
              "issuer":{
                "module": "internal"
              },
              "on_demand": true
            }
          ]
        }
      }
    }
  }